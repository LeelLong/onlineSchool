<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="my" targetRuntime="MyBatis3">

        <!-- 这里的type里写的是你的实现类的类全路径，生成器所在的位置 -->
        <commentGenerator type="generator.MyCommentGenerator">
        </commentGenerator>
        <!--连接数据库 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/onlineschool" userId="root"
                        password=""/>
        <!-- 实体类的地址 targetProject + targetPackage == 生成文件所在位置  根据表结构生成的实体类就在项目的entity中-->
        <javaModelGenerator targetPackage="entity"
                            targetProject="D:\5_MY\onlineSchool\osService\src\main\java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>
        <!-- mapper文件地址 targetProject + targetPackage == 生成文件所在物理位置     生成的.mapper文件就在mapper文件夹下-->
        <sqlMapGenerator targetPackage="mapper"
                         targetProject="D:\5_MY\onlineSchool\osService\src\main\resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>
        <!-- dao生成的存放地址 targetProject + targetPackage == 生成文件所在位置  生成的dao接口就在项目的dao中-->
        <javaClientGenerator targetPackage="dao"
                             targetProject="D:\5_MY\onlineSchool\osService\src\main\java" type="XMLMAPPER">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>
        <!-- tableName 数据库中表的名字    domainObjectName  生成的实体类名字以及加上Dao和Mapper组成的dao和mapper文件的名字 -->
        <table tableName="t_course" domainObjectName="Course"
               enableCountByExample="false" enableUpdateByExample="false"
               enableDeleteByExample="false" enableSelectByExample="false"
               selectByExampleQueryId="false">
            <property name="useActualColumnNames" value="true"/>
        </table>

    </context>
</generatorConfiguration>